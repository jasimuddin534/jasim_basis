    @{
    ViewBag.Title = "Product";
}

@section scripts{
    <script type='text/javascript' src="~/Scripts/jquery-1.8.2.js"></script>
    <script type='text/javascript' src="~/Scripts/knockout-2.2.0.js"></script>
    <script type='text/javascript' src="~/Scripts/app/product.js"></script>
}
@if (@User.Identity.IsAuthenticated)
{
<section id="list" class="active">
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="navbar navbar-inverse">
                <div class="navbar-inner">
                    <ul class="nav">
                        <li><a href="#" data-bind="click: $root.viewform, visible: gtest">CreateNew</a></li>
                        <li><a href="#" data-bind="click: $root.viewtable, visible: ptest">View Products</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span9">
            <input type="text" name="search" value="" class="input-block-level" />
        </div>
        <div class="span3">
            <div class="btn-group full">
                <a href="#" class="btn dropdown-toggle btn-block" data-toggle="dropdown">Filter<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="#">All</a></li>
                    <li><a href="#">Newest</a></li>
                    <li><a href="#">Last week</a></li>
                    <li><a href="#">Last month</a></li>
                    <li><a href="#">Last year</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 content-body">
            <table id="table1" class="table table-bordered">
               <thead>
                <tr>
                    @*<td>ProductId</td>*@
                    <td>SKU</td>
                    <td>Name</td>
                    <td>Category</td>
                    <td>Brand</td>
                    <td>Model</td>
                 @*   <td>SerialNumber</td>
                    <td>IMEI1</td>
                    <td>IMEI2</td>
                    <td>BarCode</td>
                    <td>CostPrice</td>*@
                    <td>UnitPrice</td>
                    <td colspan="3">Stock</td>
                </tr>
            </thead>
            <!--Iterate through an observableArray using foreach-->
            <tbody data-bind="foreach: Products">
                <tr style="border: solid" id="updtr">
                    @*<td><span data-bind="text: productId"></span></td>*@
                    <td><span data-bind="text: sku"></span></td>
                    <td><span data-bind="text: name"></span></td>
                    <td><span data-bind="text: category"></span></td>
                    <td><span data-bind="text: brand"></span></td>
                    <td><span data-bind="text: model"></span></td>
                   @* <td><span data-bind="text: serialNumber"></span></td>
                    <td><span data-bind="text: imeI1"></span></td>
                    <td><span data-bind="text: imeI2"></span></td>
                    <td><span data-bind="text: barCode"></span></td>
                    <td><span data-bind="text: costPrice"></span></td>*@
                    <td><span data-bind="text: unitPrice"></span></td>
                    <td><span data-bind="text: quantity"></span></td>
                    <td>
                        <button class="btn" data-bind="click: $root.getselectedproduct">Edit</button>
                    </td>
                    <td>
                        <button class="btn" data-bind="click: $root.deleterec">Delete</button>
                    </td>
                </tr>
            </tbody>
            </table>
        </div>

    </div>

</section>

<section id="form">
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="navbar navbar-inverse">
                <div class="navbar-inner">
                    <ul class="nav">
                        <li><a href="#" data-bind="click: $root.viewform, visible: gtest">CreateNew</a></li>
                        <li><a href="#" data-bind="click: $root.viewtable, visible: ptest">View Products</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 content-body">
            <table id="table2" class="table clean" data-bind="visible: ptest">
            <tr>
                <td>ProductId</td>
                <td>
                    <input type="text" id="txtid" data-bind="value: $root.pid" disabled="disabled" /></td>
            </tr>
            <tr>
                <td>SKU</td>
                <td>
                    <input type="text" id="txtsku" data-bind="value: $root.psku" /></td>
            </tr>
            <tr>
                <td>Name</td>
                <td>
                    <input type="text" id="txtname" data-bind="value: $root.pname" /></td>
            </tr>
                <tr>
                    <td>Category</td>
                    <td>
                        <input type="text" id="txtcategory" data-bind="value: $root.pcategory" /></td>
                </tr>
                <tr>
                    <td>Brand</td>
                    <td>
                        <input type="text" id="txtbrand" data-bind="value: $root.pbrand" /></td>
                </tr>
                <tr>
                    <td>Model</td>
                    <td>
                        <input type="text" id="txtmodel" data-bind="value: $root.pmodel" /></td>
                </tr>
                <tr>
                    <td>SerialNumber</td>
                    <td>
                        <input type="text" id="txtserial" data-bind="value: $root.pserial" /></td>
                </tr>
                <tr>
                    <td>IMEI1</td>
                    <td>
                        <input type="text" id="txtIMEI1" data-bind="value: $root.pIMEI1" /></td>
                </tr>
                <tr>
                    <td>IMEI2</td>
                    <td>
                        <input type="text" id="txtIMEI2" data-bind="value: $root.pIMEI2" /></td>
                </tr>
                <tr>
                    <td>BarCode</td>
                    <td>
                        <input type="text" id="txtbarcode" data-bind="value: $root.pbarcode" /></td>
                </tr>
            <tr>
                <td>CostPrice</td>
                <td>
                    <input type="text" id="txtcost" data-bind="value: $root.pcost" /></td>
            </tr>

            <tr>
                <td>UnitPrice</td>
                <td>
                    <input type="text" id="txtunit" data-bind="value: $root.punit" /></td>
            </tr>
            <tr>
                <td>Stock</td>
                <td>
                    <input type="text" id="txtquantity" data-bind="value: $root.pquantity" /></td>
            </tr>
            <tr>
                <!--The click binding has the JavaScirpt methods passed to it-->
                <td colspan="2">
                    <button class="btn btn-large" data-bind="click: $root.save, visible: stest">Save</button>
                    <button class="btn btn-large" data-bind="click: $root.update, visible: utest">Update</button>
                </td>
            </tr>
        </table>

        </div>
    </div>
</section>
}