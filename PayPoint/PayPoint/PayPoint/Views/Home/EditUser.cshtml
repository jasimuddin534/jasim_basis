@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
<script type="text/javascript">
    $(document).ready(function () {
        $(".wrapper").addClass("white");
    });
</script>
}


@if (@User.Identity.IsAuthenticated)
{
<section id="form" class="active">
        <div class="row-fluid">
            <div class="span12">
                <div class="page-header" style="position: relative">
                    <img src="~/Images/plinc-logo.png" style="position: absolute; top: 10px; right: 10px;" />
                    <h3>@ViewBag.Title</h3>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="navbar navbar-inverse">
                    <div class="navbar-inner">
                        <ul class="nav">
                            <li><a href="/home/Users" >View Users</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12 content-body">
                @using (Html.BeginForm())
                {
                    var select = "";
                    <table class="table table-bordered">
                        <tr>
                            <th>UserName</th>
                            <td>

                                @ViewBag.user
                                
                            </td>
                        </tr>
                       
                        <tr>
                            <th>Roles</th>
                            <td>
                                <select id="role" name="role">
                                
                                @foreach (string role in Roles.GetAllRoles())
                                {
                                    if (role == ViewBag.role)
                                    { select = "selected = selected"; }
                                    else { select = ""; }   
                                    
                                    <option value="@role" @select>@role</option>
                                }
                               
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <a href="/home/users" class="btn" >Back</a> &nbsp; &nbsp;
                                <input type="submit" value="Save" class="btn signin" />
                            </td>
                        </tr>
                    </table>
                  }

            </div>
        </div>
    </section>
}
else
{
}
